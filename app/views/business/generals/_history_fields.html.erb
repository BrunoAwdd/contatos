<div class="form-group form-item row">
  <%= f.hidden_field :id %>
  <div class="col-md-3 form-inline">
    <%= f.date_select :date_entry, {:order => [:day, :month, :year],
                              :use_month_numbers => true,
                              :start_year => 2000,
                              :end_year => Time.current.year},
                      {:class => 'form-control'} %>
  </div>
  <div class="col-md-7"><%= f.text_area :note, rows: "5", class: 'form-control' %></div>

  <div class="checkbox col-md-2">
    <label>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, I18n.t('remove') %>
    </label>
  </div>
  <hr>
</div>