
<div class="row form-item">
  <%= f.hidden_field :id %>
  <%= f.label :pais, class: "col-md-2 control-label" %>
  <div class="form-group col-md-1">
    <div class=""><%= f.text_field :pais, class: "form-control" %></div>
  </div>

  <%= f.label :estado, class: "col-md-1 control-label" %>
  <div class="form-group col-md-1">
    <%= f.text_field :estado, class: "form-control" %>
  </div>

  <%= f.label :cidade, class: "col-md-1 control-label" %>
  <div class="form-group col-md-3">
    <div class=""><%= f.text_field :cidade, class: "form-control" %></div>
  </div>

  <div class="checkbox col-md-3">
    <label>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, 'remove' %>
    </label>
  </div>
</div>
