<%= form_for @contato,  html: {class: 'form-horizontal'} do |f| %>
  <% if @contato.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contato.errors.count, "error") %> prohibited this contato from being saved:</h2>

      <ul>
      <% @contato.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-12">
    <h4>Informações de Contato</h4>
    <hr>
  </div><br>

  <div class="form-group">
    <%= f.label :first_name,'Nome', class: "col-md-2 control-label"%>
    <div class="col-md-10"><%= f.text_field :first_name, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, 'Sobrenome', class: "col-md-2 control-label" %><br>
    <div class="col-md-10"><%= f.text_field :last_name, class: "form-control" %></div>
  </div>

  <fieldset id="enderecos">
    <div class="col-md-12">
      <h4>Endereços</h4>
      <hr>
    </div><br>
    <div class="fields">
      <%= f.fields_for :enderecos do |endereco| %>
          <%= render 'endereco_fields', :f => endereco %>
      <% end %>
    </div>
    <div class='links'>
      <button class="btn" id="btn_enderecos"><%= link_to_add_association 'Adicionar Endereço', f, :enderecos %></button>
    </div>
    <hr>
  </fieldset>

  <fieldset id="emails">
    <div class="col-md-12">
      <h4>Emails</h4>
      <hr>
    </div><br>
    <div class="fields">
      <%= f.fields_for :emails do |email| %>
          <%= render 'email_fields', :f => email %>
      <% end %>
    </div>
    <div class='links'>
      <button class="btn" id="btn_emails"><%= link_to_add_association 'Adicionar Emails', f, :emails %></button>
    </div>
    <hr>
  </fieldset>

  <fieldset id="telefones">
    <div class="col-md-12">
      <h4>Telefones</h4>
      <hr>
    </div><br>
    <div class="fields">
      <%= f.fields_for :telefones do |telefone| %>
          <%= render 'telefone_fields', :f => telefone %>
      <% end %>
    </div>
    <div class='links'>
      <button class="btn" id="btn_telefones"><%= link_to_add_association 'Adicionar Telefones', f, :telefones %></button>
    </div>
    <hr>
  </fieldset>

  <div class="form-group">

    <%= f.collection_check_boxes(:product_ids, Product.all, :id, :nome,  class: "form-control", :item_wrapper_class => 'checkbox_container') do |product| %>
        <%= product.label  { product.check_box + product.text} %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :web_page, class: "col-md-2 control-label" %>
    <div class="col-md-10"><%= f.text_field :web_page, class: "form-control" %></div>
  </div>
  <div class="actions">
    <%= f.submit 'Enviar', class: "btn btn-primary" %>
  </div>
<% end %>


