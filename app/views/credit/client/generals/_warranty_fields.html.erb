<div class="row form-item">
  <%= f.hidden_field :id %>
  <div class="form-group col-md-12">
    <div class=""><%= f.input :name, placeholder:true %></div>
  </div>
  <div class="form-group col-md-12">

    <fieldset id="warranty_address">
      <% if f.object.warranty_address.nil? %>
        <% f.object.build_warranty_address %>
      <% end %>
      <%= f.simple_fields_for :warranty_address do |address| %>
        <div class="row form-item">
          <%= address.hidden_field :id %>
          <div class="form-group col-md-3">
            <div class=""><%= address.input :country, priority: ["BR"], selected: "BR", input_html: {class: 'form-control select'} %></div>
          </div>
          <div class="form-group col-md-2">
            <%= address.input :state, class: 'form-control', placeholder:true %>
          </div>
          <div class="form-group col-md-3">
            <div class=""><%= address.input :city, class: 'form-control', placeholder:true %></div>
          </div>
          <div class="form-group col-md-4">
            <div class=""><%= address.input :neighborhood, class: 'form-control', placeholder:true %></div>
          </div>
        </div>
        <div class="row form-item">
          <div class="form-group col-md-5">
            <%= address.input :street, class: 'form-control', placeholder:true %>
          </div>
          <div class="form-group col-md-2">
            <div class=""><%= address.input :number, class: 'form-control', placeholder:true %></div>
          </div>
          <div class="form-group col-md-5">
            <div class=""><%= address.input :zipcode, input_html: { class: 'cep' }  %></div>
          </div>
        </div>
      <% end %>
    </fieldset>
    <fieldset id="warranty_info">
      <% if f.object.warranty_info.nil? %>
          <% f.object.build_warranty_info %>
      <% end %>
      <%= f.simple_fields_for :warranty_info do |info| %>
        <div class="row form-item">
          <%= info.hidden_field :id %>
          <div class="form-group col-md-6">
            <%= info.input :value, as: :currency, input_html: { class: 'money' } %>
          </div>
          <div class="form-group col-md-6">
            <%= info.input :price, as: :currency, input_html: { class: 'money' } %>
          </div>
        </div>
        <div class="row form-item">
          <div class="form-group col-md-12">
            <%= info.input :condition %>
          </div>
          <div class="form-group col-md-12">
            <%= info.input :notes %>
          </div>
        </div>

      <% end %>

    </fieldset>

    <fieldset id="warranty_documents">
      <div class="col-md-12">
        <h4>
          <%= t('.documents') %>
        </h4>
        <hr>
      </div><br>
      <div class="fields">

        <% f.object.documents_build %>
        <%= f.simple_fields_for :warranty_documents do |document| %>
            <div class="row">
              <%= document.hidden_field :id %>
              <div class="col-md-4">
                  <%= document.hidden_field :document_list_id %>
                  <%= document.object.document_list.name %>
              </div>


              <div class="form-group col-md-2">
                <%= document.label :status, class: 'form-label' %>
                <div class=""><%= document.check_box :status, class: 'checkbox', placeholder: true %></div>
              </div>

              <div class="form-group col-md-2">
                <%= document.label :exemption, class: 'form-label' %>
                <div class=""><%= document.check_box :exemption, class: 'checkbox', placeholder: true %></div>
              </div>

              <div class="form-group col-md-2">
                <%= document.label :date, class: "form-label" %>
                <%= document.date_field :date, class: 'form-control', placeholder: true %>
              </div>

              <div class="checkbox col-md-2">
                <label>
                  <%= document.check_box :_destroy %>
                  <%= document.label :_destroy, I18n.t('remove') %>
                </label>
              </div>

            </div>
      <% end %>
      </div>

    </fieldset>
  </div>

</div>
<hr>