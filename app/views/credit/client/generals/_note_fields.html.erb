<% if @bank === '' %>
    <% f.object.credit_bank_general_id.nil? ? @bank = 0 : @bank = f.object.credit_bank_general_id %>
    <%= raw '<div class="active tab-pane"  id="note' + @bank.to_s + '">'.html_safe%>
<% elsif @bank != f.object.credit_bank_general_id %>
    <% @bank = f.object.credit_bank_general_id %>
    <%= raw '</div>'.html_safe%>
    <%= raw '<div class="tab-pane"  id="note' + @bank.to_s +  '">'.html_safe%>
<% end %>
<div class="form-group form-item row">
  <%= f.hidden_field :id %>
  <div class="col-md-4">
    <%= f.date_field :date, class: 'form-control data_format', 'maxlength' => "8", max: Date.today  %>
  </div>
  <div class="col-md-4">
    <%= f.association :credit_bank_general, include_blank: 'Nenhum', label: false %>
  </div>
  <div class="checkbox col-md-2">
    <label>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, I18n.t('remove') %>
    </label>
  </div>
  <div class="col-md-12">
    <%= f.input :note, rows: "5", class: 'form-control'%>
  </div>
</div><hr>