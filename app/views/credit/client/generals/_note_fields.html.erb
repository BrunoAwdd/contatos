<div class="form-group form-item row">
  <%= f.hidden_field :id %>
  <div class="col-md-2 form-inline">
    <%= f.date_field :date , class: 'form-control'%>
  </div>
  <div class="col-md-8"><%= f.text_area :note, rows: "5", class: 'form-control' %></div>

  <div class="checkbox col-md-2">
    <label>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, I18n.t('remove') %>
    </label>
  </div>
  <hr>
</div>
