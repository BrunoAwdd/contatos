

<div class="row form-item">
  <%= f.hidden_field :id %>
  <div class="col-md-5"><%= f.input :name %></div>
  <div class="col-md-5"><%= f.input :last_name %></div>
  <div class="checkbox col-md-2">
    <label>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, I18n.t('remove') %>

    </label>
  </div>
</div>
<div class="row form-item">
  <fieldset id="contact_email">
    <% if f.object.email.nil? %>
        <% f.object.build_email %>
    <% end %>
    <%= f.simple_fields_for :email do |e| %>
        <%= e.hidden_field :id %>
        <div class="col-md-12">
          <%= e.input :email%>
        </div>
    <% end %>
  </fieldset>
</div>
<div class="row form-item">
  <fieldset id="contact_phone">
    <% if f.object.phone.nil? %>
        <% f.object.build_phone%>
    <% end %>
    <%= f.simple_fields_for :phone do |p| %>
        <%= p.hidden_field :id %>
        <div class="col-md-4">
          <%= p.input :ddd%>
        </div>
        <div class="col-md-4">
          <%= p.input :phone%>
        </div>
        <div class="col-md-4">
          <%= p.input :model%>
        </div>
    <% end %>
  </fieldset>
</div>
<hr>
