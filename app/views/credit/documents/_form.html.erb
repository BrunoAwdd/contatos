<%= simple_form_for(@credit_document) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :frequency_unity, collection: {'Sem Vencimento' => 0, 'Semanal' => 1, 'Mensal' => 2, 'Anual' => 3}, :include_blank => false %>
    <%= f.input :frequency_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
