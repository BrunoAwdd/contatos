        </li>

        <li class="dropdown">
          <%= link_to products_path, :class => 'dropdown-toggle', :'data-toggle' => 'dropdown', :role => 'button', :'aria-haspopup' => 'true', :'aria-expanded' => 'true' do  %>
              <%= t('Product.model.Product') %> <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t('Product.view.Add_Product'), products_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to t('Product.view.List_Products'), new_product_path %></li>
