<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to 'Alternative', root_path, id: 'logo' %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('About'), about_path %></li>

        <li class="dropdown">
          <%= link_to contatos_path, :class => 'dropdown-toggle', :'data-toggle' => 'dropdown', :role => 'button', :'aria-haspopup' => 'true', :'aria-expanded' => 'true' do  %>
              <%= t('Contact.model.Contact') %> <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t('Contact.view.List_Contacts'), contatos_path %></li>
